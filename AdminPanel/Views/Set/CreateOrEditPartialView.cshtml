@model SetViewModel

@inject IUnitOfWork UnitOfWork
@{
    var types = new SelectList(UnitOfWork.Repository<CategoryItemType>().GetAllAsync().Result, "Id", "NameEnglish");
    var categories = new SelectList(UnitOfWork.Repository<Category>().GetAllAsync().Result, "Id", "NameEnglish");
}

<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label asp-for="Image" class="col-form-label"></label>
            <input asp-for="Image" class="form-control"/>
        </div>

        <div class="form-group">
            <label asp-for="NameEnglish" class="col-form-label"></label>
            <input asp-for="NameEnglish" class="form-control"/>
            <span asp-validation-for="NameEnglish" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NameArabic" class="col-form-label"></label>
            <input asp-for="NameArabic" class="form-control"/>
            <span asp-validation-for="NameArabic" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Availability" class="col-form-label"></label>
            <select class="form-control" asp-for="Availability" asp-items="ViewBag.Availabilities">
                <option value="@null">-- Select Availability --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="col-form-label"></label>
            <input asp-for="Price" class="form-control" type="number"/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Color" class="col-form-label"></label>
            <input asp-for="Color" class="form-control"/>
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StyleEnglish" class="col-form-label"></label>
            <input asp-for="StyleEnglish" class="form-control"/>
            <span asp-validation-for="StyleEnglish" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StyleArabic" class="col-form-label"></label>
            <input asp-for="StyleArabic" class="form-control"/>
            <span asp-validation-for="StyleArabic" class="text-danger"></span>
        </div>
    </div>

    <div class="col-6">
        <div class="form-group">
            <label asp-for="Suitability" class="col-form-label"></label>
            <select class="form-control" asp-for="Suitability" asp-items="ViewBag.Suitabilities">
                <option value="@null">-- Select Suitability --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="RoomEnglish" class="col-form-label"></label>
            <input asp-for="RoomEnglish" class="form-control"/>
            <span asp-validation-for="RoomEnglish" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="RoomArabic" class="col-form-label"></label>
            <input asp-for="RoomArabic" class="form-control"/>
            <span asp-validation-for="RoomArabic" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Category" class="col-form-label"></label>
            <select id="categorySelect" class="form-control" asp-for="CategoryId" asp-items="categories">
                <option value="@null">-- Select Category --</option>
            </select>
        </div>

        <div class="form-group">
            <label id="labelTypeSelect" asp-for="CategorySetType" class="col-form-label">Type</label>
            <select data-selected-type-id="@ViewBag.SelectedTypeId" data-selected-type-name="@ViewBag.SelectedTypeName" id="typeSelect" class="form-control" asp-for="CategorySetTypeId" asp-items="types">
                <option value="@null">-- Select Type --</option>
            </select>
        </div>
    </div>
</div>