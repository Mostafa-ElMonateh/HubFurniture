@model DiscountViewModel
@{
    ViewData["Title"] = "CreateDiscount";
}

<h1>Create Discount</h1>

<div class="container">
    <form method="post" asp-action="CreateDiscount">

        <div class="form-group">
            <label asp-for="Type" class="col-form-label"></label>
            <select class="form-control" asp-for="Type" asp-items="ViewBag.Types">
                <option value="@null">-- Select Type --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Discount" class="col-form-label"></label>
            <input asp-for="Discount" class="form-control" type="number" />
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>

        <input type="submit" value="Create" class="btn btn-primary mt-3" style="background: #7036BE; border: 0;" />
        <a asp-action="Index" class="btn btn-light mt-3">Back</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}