@model IReadOnlyList<DeliveryMethodViewModel>
@{
    ViewData["Title"] = "Delivery Methods";
}

<h1>Delivery Methods</h1>

@*Create Button*@
<a asp-action="Create" class="btn btn-outline-primary mt-2 mb-3">Add New Delivery Method</a>

@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-hover table-bordered dt-responsive text-nowrap">
            <thead class="bg-dark text-white text-center">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description in English</th>
                    <th>Description in Arabic</th>
                    <th>Cost</th>
                    <th>DeliveryTime in English</th>
                    <th>DeliveryTime in Arabic</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.DescriptionEnglish</td>
                        <td>@item.DescriptionArabic</td>
                        <td>EGP @item.Cost</td>
                        <td>@item.DeliveryTimeEnglish</td>
                        <td>@item.DeliveryTimeArabic</td>

                        <td>
                            <div class="d-flex gap-0">
                                <a class="btn mb-2 text-warning p-2" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                                <a class="btn mb-2 text-primary p-2" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="btn text-danger p-2" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are no Delivery Methods!</h2>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}