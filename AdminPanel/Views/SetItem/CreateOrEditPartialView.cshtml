@model SetItemViewModel


<div class="row">
    <div class="col-6">

        <div class="form-group">
            <input type="hidden" asp-for="CategorySetId"/>
        </div>

        <div class="form-group">
            <label asp-for="NameEnglish" class="col-form-label"></label>
            <input asp-for="NameEnglish" class="form-control"/>
            <span asp-validation-for="NameEnglish" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NameArabic" class="col-form-label"></label>
            <input asp-for="NameArabic" class="form-control"/>
            <span asp-validation-for="NameArabic" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Height" class="col-form-label"></label>
            <input asp-for="Height" class="form-control" type="number" />
            <span asp-validation-for="Height" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Width" class="col-form-label"></label>
            <input asp-for="Width" class="form-control" type="number" />
            <span asp-validation-for="Width" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Depth" class="col-form-label"></label>
            <input asp-for="Depth" class="form-control" type="number" />
            <span asp-validation-for="Depth" class="text-danger"></span>
        </div>

    </div>
</div>