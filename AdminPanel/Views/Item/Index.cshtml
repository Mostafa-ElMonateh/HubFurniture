@model IReadOnlyList<ItemViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Items</h1>

@*Create Button*@
<a asp-action="Create" class="btn btn-outline-primary mt-2 mb-3">Add New Item</a>

@if (Model.Count() > 0)
{
    <div class="container">
        <table class="table table-hover table-bordered dt-responsive text-nowrap">
            <thead class="bg-dark text-white text-center">
            <tr>
                <th>Id</th>
                <th>Picture</th>
                <th>Name</th>
                <th>Availability</th>
                <th>Price</th>
                <th>Discount</th>
                <th>Color</th>
                <th>Height</th>
                <th>Depth</th>
                <th>Width</th>
                <th>Type</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <img class="w-100" src="~/@item.ProductPictures[0].PictureUrl" />
                        </td>
                        <td>@item.NameEnglish</td>
                        <td>@item.Availability</td>
                        <td>@item.Price EGP</td>
                        <td>@item.Discount %</td>
                        <td>@item.Color</td>
                        <td>@item.Height cm</td>
                        <td>@item.Depth cm</td>
                        <td>@item.Width cm</td>
                        <td>@item.CategoryItemType?.NameEnglish</td>
                        <td>@item.Category?.NameEnglish</td>
                        
                        <td>
                            <div class="d-flex gap-0">
                                <a class="btn mb-2 text-warning p-2" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
                                <a class="btn mb-2 text-primary p-2" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="btn text-danger p-2" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are no Items Types!</h2>
    </div>
}
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
